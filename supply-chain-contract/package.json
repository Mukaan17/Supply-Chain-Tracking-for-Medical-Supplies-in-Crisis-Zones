{
  "name": "supply-chain-contract",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security:scan": "npm audit --audit-level=moderate && npm run audit",
    "audit:contract": "node scripts/audit.js",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "compile": "hardhat compile",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat verify",
    "audit": "node scripts/audit.js",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "keywords": [
    "supply-chain",
    "blockchain",
    "ethereum",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "description": "Enterprise-grade supply chain tracking smart contract",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.0",
    "dotenv": "^17.2.2",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.7.22",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.0.0"
  }
}
