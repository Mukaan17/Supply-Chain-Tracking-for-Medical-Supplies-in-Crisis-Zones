# Supply Chain Contract Environment Configuration
# Copy this file to .env and update with your values

# Network Configuration
# Options: localhost, sepolia, mainnet, polygon, arbitrum, optimism
NETWORK=localhost

# Private Key for Deployment
# WARNING: Never commit this file with a real private key!
# Use a test account for development
# Format: 0x followed by 64 hex characters
PRIVATE_KEY=your_private_key_here

# RPC URLs (optional, will use default if not set)
# For Infura, replace YOUR_INFURA_KEY with your actual Infura project ID
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Etherscan API Key (for contract verification)
# Get your API key from: https://etherscan.io/apis
ETHERSCAN_API_KEY=

# Gas Configuration (optional)
# Gas price in gwei (leave empty for automatic)
GAS_PRICE=
# Gas limit (leave empty for automatic)
GAS_LIMIT=

# Contract Verification
# Set to true to verify contract on Etherscan after deployment
VERIFY_CONTRACT=false

# Example for Sepolia testnet:
# NETWORK=sepolia
# PRIVATE_KEY=0x...
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# ETHERSCAN_API_KEY=your_etherscan_api_key
# VERIFY_CONTRACT=true
